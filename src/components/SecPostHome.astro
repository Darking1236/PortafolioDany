---
import RecentPost from "./RecentPost.astro";
const {title,posts,color, colorText }= Astro.props; 
---


<section class="cont-sec">
    <div class="content-title">
        <h2>{title}</h2>
    </div>
    <div class="cont-post">
        {posts.map((post:any)=>(
            <RecentPost title={post.title} description={post.description} tags={post.tags} img={post.img} /> 
        ))}
     </div>
         
</section>

<style define:vars={{color,colorText}}>
.cont-sec{
    min-height: 500px;
    background-color: var(--color);
    color: var(--colorText);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 0 3rem 0;
    gap: 3rem
}

.cont-post{
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap:3rem
}

</style>