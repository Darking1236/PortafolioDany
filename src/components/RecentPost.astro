---
import TagsPost from "@components/TagsPost.astro";
const {title,description,tags,img} = Astro.props; 
---
<div class="card-blog">
    <div class="cont-img-blog">
        <img src={img} alt={title} srcset=""/>
    </div>
    <div class="cont-name-desc-blog">
        <span>{title}</span>
        <p>{description}</p>
        <div class="cont-tags">
            {tags.map((tg:any) =>( <TagsPost tag={tg}/>))}
        </div>
    </div>
</div>

<style>
    .card-blog{
    background-color: #f6f6f7;
    color: #ffff;
    height: auto;
    max-width: 300px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    border-radius: 5px;
    transition: transform 0.5s;
}

.cont-name-desc-blog{
    flex-grow: 1;
     background-color: rgb(0, 0, 0);
     padding: 1rem;
     border-radius: 0 0 5px 5px;
     
}

.cont-tags{
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
    gap: 5px;
}

 .cont-img-blog {
        max-height: 250px;
        display: flex;
        justify-content: center;
        align-items: center; 
    }

.cont-img-blog img {
        width: 100%; 
        height: 100%; 
        object-fit: cover;
        border-radius: 5px 5px 0 0; 
    }

.card-blog:hover{
   transform: scale(1.1) ;
   cursor: pointer;
   box-shadow: 0 0 15px 5px #0ae988b4 
}
</style>